<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yqfk.dao.YQSJXXGLDao">
    <insert id="addData" parameterType="com.yqfk.poji.DataForPerson">
      insert into persondata values (null ,#{username},#{idCard},#{heat},#{iscough},#{address},#{date})
    </insert>

    <select id="queryAll" resultType="com.yqfk.poji.DataForPerson">
        select * from persondata
    </select>
    <delete id="deleteById" parameterType="int">
        delete from persondata where id=#{id}
    </delete>
    <!--模糊查询-->
    <select id="queryByTags" resultType="com.yqfk.poji.DataForPerson" parameterType="com.yqfk.vo.Tags">
        select * from persondata
        <where>
            <if test="username!=null">
                username like "%"#{username}"%"
            </if>
            <if test="idCard!=null">
             and  idCard like "%"#{idCard}"%"
            </if>
            <!-- 原符号< <= > >= & ’ " 替换符号 &lt; &lt;= &gt; &gt;= &amp; &apos; &quot;-->
            <if test="heat==0">
                and heat &lt;= 37.8
            </if>
            <if test="heat==1">
                and heat &gt;= 37.8
            </if>
           <if test="address!=null">
             and  address like "%"#{address}"%"
            </if>
             <if test="date!=null">
              and  date like "%"#{date}"%"
            </if>
        </where>
    </select>
</mapper>